@model IEnumerable<McqTask.Models.Question>

<div class="container mt-5">
    <h2 class="mb-4">Exam</h2>
    <form asp-action="SubmitExam" method="post">
        @foreach (var question in Model)
        {
            <div class="mb-4">
                <h5>@question.Text</h5>
                @foreach (var option in question.Options)
                {
                    <div class="form-check">
                        <input type="radio" class="form-check-input" name="answers[@question.Id]" value="@option.Id" required />
                        <label class="form-check-label">@option.Text</label>
                    </div>
                }
            </div>
        }
        <input type="hidden" name="studentId" value="@ViewBag.StudentId" />
        <button type="submit" class="btn btn-success">Submit</button>
    </form>
</div>
