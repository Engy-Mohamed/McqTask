@{
    Layout = "~/Views/Shared/_Custom_layout.cshtml";
}
@model McqTask.Models.Student

<div class="container mt-5">
    <h2 class="mb-4">Exam Result</h2>
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Name: @Model.Name</h5>
            <p class="card-text"><strong>Email:</strong> @Model.Email</p>
            <p class="card-text"><strong>Phone:</strong> @Model.PhoneNumber</p>
            <p class="card-text"><strong>Score:</strong> @Model.Score</p>
        </div>
    </div>
    <a class="btn btn-primary mt-4" href="/">Back to Home</a>
</div>
