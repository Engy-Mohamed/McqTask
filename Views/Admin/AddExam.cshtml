@model McqTask.Models.Exam
<div class="container mt-5">
    <h2 class="mb-4">Add New Exam</h2>
    <form asp-action="AddExam" method="post" class="needs-validation" novalidate>
        <div class="mb-3">
            <label for="Name" class="form-label">Exam Name</label>
            <input type="text" class="form-control" id="Name" name="Name" required />
            <div class="invalid-feedback">Please enter a name for the exam.</div>
        </div>
        <div class="mb-3">
            <label for="Date" class="form-label">Exam Date</label>
            <input type="date" class="form-control" id="Date" name="Date" required />
            <div class="invalid-feedback">Please select a date for the exam.</div>
        </div>
        <button type="submit" class="btn btn-primary">Save Exam</button>
    </form>
</div>
